<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowContentTransitions" tools:ignore="NewApi">true</item>
        <item name="android:fontFamily">@font/bree_serif</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>





    <style name="AppTheme.Text" />

    <style name="AppTheme.Text.18PrimaryBold">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Text.18Primary">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="AppTheme.Text.14Primary">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="AppTheme.Text.14PrimaryBold">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Text.14Secondary">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="AppTheme.Text.14SecondaryBold">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Text.14Accent">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Text.14AccentBold">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.Text.12Secondary">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="AppTheme.Button" />

    <style name="AppTheme.Button.FilledAccent" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.Button.OutlinedAccent" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Button.Text" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/colorAccent</item>
    </style>


    <style name="AppTheme.InputField" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="AppTheme.InputField.OnDark" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">#60FFFFFF</item>
        <item name="passwordToggleTint">#FFFFFF</item>
    </style>






</resources>
